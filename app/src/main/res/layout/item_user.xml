<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="user"
            type="com.demo.roomgreendao.room.entity.User" />

        <variable
            name="clickCallback"
            type="com.demo.roomgreendao.OnUserItemClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickCallback.onItemClicked(user)}"
        android:onLongClick="@{view -> clickCallback.onItemLongClicked(view, user)}"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/userName(user.name)}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/userAge(user.age)}" />
    </LinearLayout>

</layout>